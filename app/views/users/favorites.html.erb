<h1>Favorites</h1>

<% @favorites.each do |fav| %>
    <div class="card">
    <div class="card-header">
    <%= fav.user.username %>
    </div>
        <div class="card-body">
        <h5 class="card-title"><a href="/posts/<%= fav.slug %>"><%= fav.title %></a></h5>
    <p><%= fav.description %></p>
    </div>
    </div>
<% end %>