<h1>Favorites</h1>

<% if @favorites.count == 0 %>
    <p> Oops, you have no favorites. Add a post to your favorites to view them here. </p>
<% end %>
<% @favorites.each do |fav| %>
    <div class="card">
    <div class="card-header">
    <%= fav.user.username %>
    </div>
        <div class="card-body">
        <h5 class="card-title"><a href="/posts/<%= fav.slug %>"><%= fav.title %></a></h5>
    <p><%= fav.description %></p>
    </div>
    </div>
<% end %>