<h1>All Posts.</h1>
<% if logged_in? %>
<a href="/posts/new">Create a NEW POST</a>
<% end %>
<br>
<br>

    <br>
    
 

    <% @posts.each do |post| %>
    <div class="card">
  <div class="card-header">
     
    @<%= post.user.username %>
  </div>
  <div class="card-body">
    <h5 class="card-title"><a href="/posts/<%= post.id %>"> <%= post.title %></a></h5>
    <p class="card-text"><%= post.description %></p>
    </div>
    
    </div>
    <br>
    <% end %>