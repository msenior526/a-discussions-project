<h1>Insert the form to edit an instance of your model here.</h1>
<form action="/posts/<%= @edit_post.slug %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label for="title">TITLE</label>
  <input type="text" id="title" name="post[title]" value="<%= @edit_post.title %>"><br>
  <label for="description">DESCRIPTION</label>
  <input type="text" id="description" name="post[description]" value="<%= @edit_post.description %>"><br>
  <input type="submit" value="Submit">
</form> 